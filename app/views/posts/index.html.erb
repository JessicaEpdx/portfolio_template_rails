<% if user_signed_in? %>
  <% if current_user.admin %>
  <div class="row">
    <div class=" well col-sm-12 secondary-nav edit-delete-skill">
      <%= link_to 'Add Post', new_post_path(@post) %> |

    </div>
  </div>
  <% end %>
<% end %>

<% if @posts.any? %>
  <% @posts.each do |post| %>
    <div class="post well post-header">
      <%= post.created_at.to_date.strftime('%A')%>
      <%=post.created_at.to_date.strftime('%B')%>
      <%=post.created_at.to_date.strftime('%d')%>,
      <%=post.created_at.to_date.strftime('%Y') %>
      <h3><%= post.title %></h3>
      <div class="well post-content">
        <%= post.content %>
      </div>
    </div>
  <% end %>
<% else %>
  <h3>There are no posts yet :( Check back soon :)</h3>
<% end %>
