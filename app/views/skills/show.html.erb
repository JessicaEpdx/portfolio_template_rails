<div class="row">
  <div class="col-sm-2">
    <%= link_to 'Edit Skill', edit_skill_path %>
  </div>
</div>
<div class="row">
  <div class="col-sm-9">
    <h1><%= @skill.name %></h1>
    <h5><%= @skill.description %></h5>
  </div>
  <div class="col-sm-3">
    <% if @skill.projects.any? %>
      <h3>Projects</h3>
      <% @skill.projects.each do |project| %>
        <%= project.name %>
      <% end %>
    <% end %>
  </div>
</div>
